<!DOCTYPE html>
<html>
<head>
  <title>Joke Dropdown</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <div class="container">
    <h2>Pilih Jenis dan Kategori Lelucon</h2>
    <form action="/" method="POST">
  <div class="mb-3">
    <label for="jokeType" class="form-label">Joke Type:</label>
    <select name="jokeType" id="jokeType" class="form-select" required>
      <% if (types && types.length) { %>
        <% types.forEach(type => { %>
          <option value="<%= type %>"><%= type %></option>
        <% }) %>
      <% } else { %>
        <option disabled>Data type tidak tersedia</option>
      <% } %>
    </select>
  </div>

  <div class="mb-3">
    <label for="category" class="form-label">Category:</label>
    <select name="category" id="category" class="form-select" required>
      <% if (categories && categories.length) { %>
        <% categories.forEach(cat => { %>
          <option value="<%= cat %>"><%= cat %> </option>
        <% }) %>
      <% } else { %>
        <option disabled>Data category tidak tersedia</option>
      <% } %>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Get Joke</button>
</form>

<% if (joke) { %>
    <div class="mt-4 alert alert-success">
        <h4>Joke Result:</h4>
        <% if (joke.type === "single") { %>
        <p><%= joke.joke %></p>
        <% } else if (joke.type === "twopart") { %>
        <p><strong>Setup:</strong> <%= joke.setup %></p>
        <p><strong>Delivery:</strong> <%= joke.delivery %></p>
        <% } %>
    </div>
    <% } %>

  </div>
</body>
</html>
